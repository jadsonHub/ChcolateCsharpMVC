@model ProjetoChocolate.Models.Chocolate

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Editar Chocolate</h1><br />
            <div class="row justify-content-md-center">
                <div class="col-md-6 col-lg-6">
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id_Chocolate" />
                        <div class="form-group">
                            <label asp-for="Marca" class="control-label">Marca</label>
                            <input asp-for="Marca" class="form-control" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Porcent_Cacau" class="control-label">Porcemtagem de Cacau</label>
                            <input asp-for="Porcent_Cacau" class="form-control" />
                            <span asp-validation-for="Porcent_Cacau" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label">Tipo</label>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>Preco</label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Porcent_Desconto" class="control-label">Porcentagem de Desconto</label>
                            <select class="form-control" asp-for="Porcent_Desconto" type="number" class="form-control">
                                <option value="0">0%</option>
                                <option value="5">5%</option>
                                <option value="10">10%</option>
                                <option value="15">15%</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                    <div>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Voltar para o inicio </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
